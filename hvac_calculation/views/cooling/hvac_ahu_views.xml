<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="hvac_ahu_list" model="ir.ui.view">
        <field name="name">hvac.ahu.list</field>
        <field name="model">hvac.ahu</field>
        <field name="arch" type="xml">
            <list>
                <field name="name"/>
                <field name="brand"/>
                <field name="ahu_type"/>
                <field name="airflow_cfm"/>
                <field name="cooling_capacity_kw"/>
                <field name="price"/>
            </list>
        </field>
    </record>

    <record id="hvac_ahu_form" model="ir.ui.view">
        <field name="name">hvac.ahu.form</field>
        <field name="model">hvac.ahu</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="brand"/>
                            <field name="model"/>
                            <field name="ahu_type"/>
                        </group>
                        <group>
                            <field name="airflow_cfm"/>
                            <field name="airflow_cmh"/>
                            <field name="cooling_capacity_kw"/>
                            <field name="cooling_capacity_ton"/>
                            <field name="fan_power_kw"/>
                            <field name="voltage"/>
                            <field name="price"/>
                            <field name="active"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_hvac_ahu" model="ir.actions.act_window">
        <field name="name">Air Handling Units</field>
        <field name="res_model">hvac.ahu</field>
        <field name="view_mode">list,form</field>
    </record>

</odoo>
