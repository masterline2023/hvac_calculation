<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="hvac_water_heater_list" model="ir.ui.view">
        <field name="name">hvac.water.heater.list</field>
        <field name="model">hvac.water.heater</field>
        <field name="arch" type="xml">
            <list>
                <field name="name"/>
                <field name="brand"/>
                <field name="heater_type"/>
                <field name="capacity_liters"/>
                <field name="flow_rate_lpm"/>
                <field name="power_kw"/>
                <field name="price"/>
            </list>
        </field>
    </record>

    <record id="hvac_water_heater_form" model="ir.ui.view">
        <field name="name">hvac.water.heater.form</field>
        <field name="model">hvac.water.heater</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="brand"/>
                            <field name="model"/>
                            <field name="heater_type"/>
                        </group>
                        <group>
                            <field name="capacity_liters"/>
                            <field name="flow_rate_lpm"/>
                            <field name="power_kw"/>
                            <field name="collector_area_sqm" invisible="heater_type != 'solar'"/>
                            <field name="tank_capacity" invisible="heater_type != 'solar'"/>
                            <field name="voltage"/>
                            <field name="price"/>
                            <field name="active"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_hvac_water_heater" model="ir.actions.act_window">
        <field name="name">Water Heaters</field>
        <field name="res_model">hvac.water.heater</field>
        <field name="view_mode">list,form</field>
    </record>

</odoo>
