<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="hvac_radiator_list" model="ir.ui.view">
        <field name="name">hvac.radiator.list</field>
        <field name="model">hvac.radiator</field>
        <field name="arch" type="xml">
            <list>
                <field name="name"/>
                <field name="radiator_type"/>
                <field name="height"/>
                <field name="width"/>
                <field name="watt_output"/>
                <field name="price"/>
            </list>
        </field>
    </record>

    <record id="hvac_radiator_form" model="ir.ui.view">
        <field name="name">hvac.radiator.form</field>
        <field name="model">hvac.radiator</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="radiator_type"/>
                            <field name="brand"/>
                            <field name="model"/>
                        </group>
                        <group>
                            <field name="height"/>
                            <field name="width"/>
                            <field name="watt_output"/>
                            <field name="price"/>
                            <field name="active"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_hvac_radiator" model="ir.actions.act_window">
        <field name="name">Radiators</field>
        <field name="res_model">hvac.radiator</field>
        <field name="view_mode">list,form</field>
    </record>

</odoo>
