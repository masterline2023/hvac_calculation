<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="hvac_heating_piping_material_list" model="ir.ui.view">
        <field name="name">hvac.heating.piping.material.list</field>
        <field name="model">hvac.heating.piping.material</field>
        <field name="arch" type="xml">
            <list>
                <field name="name"/>
                <field name="material_type"/>
                <field name="diameter"/>
                <field name="unit"/>
                <field name="price_per_unit"/>
            </list>
        </field>
    </record>

    <record id="hvac_heating_piping_material_form" model="ir.ui.view">
        <field name="name">hvac.heating.piping.material.form</field>
        <field name="model">hvac.heating.piping.material</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="material_type"/>
                            <field name="diameter"/>
                        </group>
                        <group>
                            <field name="unit"/>
                            <field name="price_per_unit"/>
                            <field name="active"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_hvac_heating_piping_material" model="ir.actions.act_window">
        <field name="name">Piping Materials</field>
        <field name="res_model">hvac.heating.piping.material</field>
        <field name="view_mode">list,form</field>
    </record>

</odoo>
