<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="hvac_terms_list" model="ir.ui.view">
        <field name="name">hvac.terms.list</field>
        <field name="model">hvac.terms</field>
        <field name="arch" type="xml">
            <list>
                <field name="name"/>
                <field name="apply_heating"/>
                <field name="apply_cooling"/>
                <field name="apply_hotwater"/>
                <field name="active"/>
            </list>
        </field>
    </record>

    <record id="hvac_terms_form" model="ir.ui.view">
        <field name="name">hvac.terms.form</field>
        <field name="model">hvac.terms</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="active"/>
                        </group>
                        <group>
                            <field name="apply_heating"/>
                            <field name="apply_cooling"/>
                            <field name="apply_hotwater"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Offer Includes">
                            <field name="offer_includes"/>
                        </page>
                        <page string="Offer Excludes">
                            <field name="offer_excludes"/>
                        </page>
                        <page string="Payment Terms">
                            <field name="payment_terms"/>
                        </page>
                        <page string="Execution Time">
                            <field name="execution_time"/>
                        </page>
                        <page string="Warranty">
                            <field name="warranty"/>
                        </page>
                        <page string="Additional Notes">
                            <field name="additional_notes"/>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_hvac_terms" model="ir.actions.act_window">
        <field name="name">Terms Templates</field>
        <field name="res_model">hvac.terms</field>
        <field name="view_mode">list,form</field>
    </record>

</odoo>
